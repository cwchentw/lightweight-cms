#!/bin/sh
#
# A utility script to load assets.


cwd=$(dirname $0);
bin="${cwd}/../bin";
lib="${cwd}/../lib";
libexec="${cwd}/../libexec";

# Generate site settings if it doesn't exist.
if ! [ -f "${lib}/settings.sh" ];
then
    "${bin}/init" > "${lib}/settings.sh" || (
        exit $?;
    )
fi

# Load site settings.
. "${lib}/settings.sh";

if ! [ -d "$public" ];
then
    mkdir -p "$public" || (
        echo "Unable to create a public directory" >&2;
        exit 1;
    )
fi

php "${libexec}/assets.php" || (
    exit 1;
)
