#!/bin/sh
#
# A utility script to generate a manifest.json for mdcms.


cwd=$(dirname $0);
root="${cwd}/../..";
libexec="${cwd}/../libexec";
public="${root}/public";

if ! [ -d "$public" ];
then
    mkdir -p "$public" || (
        echo "Unable to create a public directory" >&2;
        exit 1;
    )
fi

php "${libexec}/manifest.php" > "$public/manifest.json" || (
    echo "Unable to create a manifest.json" >&2;
    exit 1;
)
