#!/bin/sh
#
# Clean the public directories.


cwd=$(dirname $0);
bin="${cwd}/../bin";
lib="${cwd}/../lib";
libexec="${cwd}/../libexec";

# Generate site settings if it doesn't exist.
if ! [ -f "${lib}/settings.sh" ];
then
    "${bin}/init" > "${lib}/settings.sh" || (
        exit $?;
    )
fi

# Load site settings.
. "${lib}/settings.sh";

for dir in data public "${theme}/public";
do
    rm -rf "$dir";
done
