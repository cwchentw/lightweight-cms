#!/bin/sh
# Utility to create the link file.


# Check whether PHP is available on the system.
if ! command -v php 2>&1 1>/dev/null;
then
    echo "No PHP on the system" >&2;
    exit 1;
fi

cwd=$(dirname $0);
bin="${cwd}/../bin";
lib="${cwd}/../lib";
libexec="${cwd}/../libexec";

# Generate site settings if it doesn't exist.
if ! [ -f "${lib}/settings.sh" ];
then
    "${bin}/init" > "${lib}/settings.sh" || (
        exit $?;
    )
fi

# Load site settings.
. "${lib}/settings.sh";

# reate the link file.
php "${libexec}/allLinks.php" || (
    echo "Unable to create the link file" >&2;
    exit 1;
)
