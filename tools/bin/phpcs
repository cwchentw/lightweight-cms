#!/bin/sh
#
# Lint PHP scripts with PHP Code Sniffer


# Check whether PHP is available on the system.
if ! command -v php 2>&1 1>/dev/null;
then
    echo "No PHP on the system" >&2;
    exit 1;
fi

target=$1;

if [ -z "$target" ];
then
    echo "No valid target" >&2;
    exit 1;
fi

cwd=$(dirname $0);
bin="${cwd}/../bin";
lib="${cwd}/../lib";
libexec="${cwd}/../libexec";
etc="${cwd}/../etc"

# Generate site settings if it doesn't exist.
if ! [ -f "${lib}/settings.sh" ];
then
    "${bin}/init" > "${lib}/settings.sh" || (
        exit $?;
    )
fi

# Load site settings.
. "${lib}/settings.sh";

"${root}/vendor/bin/phpcs" --standard="${etc}/phpcs.xml" "$target";