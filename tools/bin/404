#!/bin/sh
#
# A utility script to generate a 404.html for mdcms.


cwd=$(dirname $0);
root="${cwd}/../..";
libexec="${cwd}/../libexec";
public="${root}/public";

if ! [ -d "$public" ];
then
    mkdir -p "$public" || (
        echo "Unable to create a public directory" >&2;
        exit 1;
    )
fi

php "${libexec}/404.php" > "$public/404.html" || (
    echo "Unable to create a 404.html" >&2;
    exit 1;
)
